<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <PlatformTarget>x86</PlatformTarget>
    <Platform>x86</Platform>
    <RootNamespace>SwyxBridge</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Swyx.Client.ClmgrAPI" Version="14.21.0" />
    <PackageReference Include="SIPSorcery" Version="10.0.3" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="8.*" />
    <PackageReference Include="System.Text.Json" Version="8.*" />
    <PackageReference Include="System.ServiceModel.NetTcp" Version="8.*" />
    <PackageReference Include="System.ServiceModel.Security" Version="6.*" />
  </ItemGroup>

  <!-- ASP.NET Core + SignalR fÃ¼r Standalone-Kestrel-Host -->
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

</Project>
